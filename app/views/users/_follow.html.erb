<% if current_user.following?(user) %>
  <%= link_to 'Unfollow', following_path(id: user.id), method: :destroy, class: 'text-dark' unless user == current_user %>
<% else %>
  <%= link_to 'Follow', followings_path(id: user.id), method: :post, class: 'text-dark' unless user == current_user %>
<% end %>

