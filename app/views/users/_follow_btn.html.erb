<div class="mr-3">
  <% if !current_user.following?(@user) %>
    <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, followings_path(id: @user.id), method: :post, class: 'text-dark' %>
  <% else %>
    <%= link_to 'Unfollow', following_path(id: @user.id), method: :delete, class: 'text-dark' %>
  <% end %>
</div>