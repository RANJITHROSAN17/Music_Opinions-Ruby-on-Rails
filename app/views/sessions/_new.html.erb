<div class="login nav justify-content-between mt-3">
  <div class="text-center text-white bg-dark rounded nav-item p-3 m-3">
    <h5>
      Sign in with your username...
    </h5>
  </div>

<div class="nav">
  <%= simple_form_for @user, url: sessions_path do |f| %>
    <%= f.text_field :username, placeholder: 'Username',
          required: true, class: 'text-center nav-link' %>
    <%= f.submit 'Sign In', class: 'btn btn-light text-dark btn-block nav-item mr-2' %>
  <% end %>
  <%= render 'sessions/sign_up' %>
</div>
